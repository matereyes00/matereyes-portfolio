{
	"tags": {
		"allowUnknownTags": true,
		"dictionaries": ["jsdoc", "closure"]
	},
	"source": {
		"include": ["src"],
		"includePattern": ".+\\.jsx?$",
		"excludePattern": "(^|\\/|\\\\)node_modules(\\$|/)"
	},
	"opts": {
		"destination": "./docs",
		"recurse": true,
		"readme": "./README.md",
		"template": "node_modules/better-docs"
	},
	"plugins": ["plugins/markdown"],
	"templates": {
		"better-docs": {
			"name": "Matereyes Portfolio",
			"logo": "public/images/logo.png",
			"trackSource": true,
			"staticFiles": {
				"include": ["./public"]
			}
		}
	}
}
