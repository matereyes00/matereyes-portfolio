@require variables
@require mixins
body
    container-measurement(0, 0, bg-color)
    box-sizing border-box
    text-align justify
    text-justify inter-word

.container
    grid-format(grid,1fr 4fr, minmax(50pc, auto), 10px, 0 10rem)
    div
        padding 1rem
    .article-feature
        figure
            img
                img-size(40%, auto)

h1
    text-customization(h1-color, stanlistone-font, 3rem)

h2
    text-customization(h2-color, Righteous-font, 2rem)

p
    text-customization(text-color, OpenSans-font, 1.3rem)

figure
    text-customization(figcap-color, ConcertOne-font, normal)

#nextgen-aside
    container-measurement(1rem 8rem 4rem 0.5rem, 3.5rem, aside1-bgcolor)
    aside-measurement(right, 10rem, 50%)
    p
        text-customization(asidetext1-color, ConcertOne-font, 1.2rem)

#game-over-aside
    @extend #nextgen-aside
    background: aside2-bgcolor
    p
        @extend #nextgen-aside p
        color asidetext2-color

.article-feature
    container-measurement( 0 3rem, 1rem, transparent)
    figure
        img
            img-size(40%, auto)
            margin-left 0.84rem

.multiple-feature
    flex-format(flex, row, nowrap)

.section
    padding 1rem
    figure
        img
            img-size(100%, auto)

.grid-article-feature
    grid-format(grid, repeat(2, 1fr), 1fr, 0,  0 8rem)
    .feat1
        grid-area 1/1/2/2
        figure
            img
                img-size(70%, auto)
    .feat2
        grid-area 1/2/2/3
        @extend .grid-article-feature .feat1 figure img

@media only screen and (max-width: 768px)
    .container
        flex-format(flex, column, wrap)
        margin 0 auto
        .article-feature
            figure
                img
                    max-width 100%
                    height auto
    #nextgen-aside
        p
            font-size 1.5rem
    .multiple-feature
        flex-format(flex, column, wrap)

    .grid-article-feature
        grid-template-columns 1fr
        grid-column-gap 0px
        grid-row-gap 0px
        .feat1
            grid-area 1 / 1 / 2 / 2
            figure
                img
                    max-width 110%
                    height auto
        .feat2
            grid-area 2 / 1 / 3 / 2
            figure
                img
                    max-width 190%
                    height auto